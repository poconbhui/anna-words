<h1>Listing words</h1>

<% if flash[:notice] %>
  <div class="notice">
    <%= flash[:notice] %>
  </div>
<% end %>


<table>
  <tr>
    <th>English</th>
    <th>Translation</th>
    <th>Remember Count</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @words.each do |word| %>
  <tr>
    <td><%= word.english %></td>
    <td><%= word.translation %></td>
    <td><%= word.remembercount %></td>
    <td><%= link_to 'Show', word %></td>
    <td><%= link_to 'Edit', edit_word_path(word) %></td>
    <td><%= link_to 'Destroy', word, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Test Me!', words_test_path %>
<%= link_to 'New Word', new_word_path %>
